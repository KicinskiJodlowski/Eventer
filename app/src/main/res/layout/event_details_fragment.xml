<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context=".fragment.EventDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Nazwa wydarzenia:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/eventTitle"
                android:hint=""
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:enabled="false"
                android:textAlignment="center"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Data rozpoczęcia wydarzenia:"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/eventStartDate"
                android:hint=""
                android:inputType="date"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Godzina rozpoczęcia wydarzenia:"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/eventStartTime"
                android:hint=""
                android:inputType="time"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Opis wydarzenia:"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/eventDesc"
                android:hint=""
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:scrollbars="vertical"
                android:enabled="false"
                android:fadeScrollbars="true"/>

            <Button
                android:id="@+id/btnEdit"
                android:text="Edytuj"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/imageEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSave"
                android:text="Zapisz zmiany"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>